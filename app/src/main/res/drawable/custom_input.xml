<!-- res/drawable/custom_edittext_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border for the whole TextInputLayout -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#A49E9E9E"
                />
            <corners
                android:radius="7dp" />
        </shape>
    </item>
    <!-- Remove bottom border for the EditText -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
